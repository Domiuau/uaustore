<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.perfil.Perfil_detalhesCompra">

    <RelativeLayout

        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape6dpbaixo"
        android:backgroundTint="@color/preto"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Detalhes da compra"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagem_produto"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:scaleType="centerCrop"
                android:src="@drawable/frotafverde"
                app:shapeAppearance="@style/arredondada_2" />

            <TextView
                android:id="@+id/nome_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/pretomaisclaro"
                android:textSize="16sp"
                tools:text="Nome do produto" />

            <TextView
                android:id="@+id/data_de_compra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/pretomaisclaro"
                android:textSize="15sp"
                tools:text="Adquirido em 34/64/7347 45:45" />

            <TextView
                android:id="@+id/preco_atual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pretomaisclaro"
                android:textSize="15sp"
                tools:text="Preço atual do produto" />

            <LinearLayout
                android:id="@+id/pagina_produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape10dp"
                android:backgroundTint="#EDEDED"
                android:orientation="horizontal"
                android:padding="6dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagem_pagina_produto"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearance="@style/arredondada_48"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="Acessar página do produto"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    android:textStyle="italic" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/pagina_vendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape10dp"
                android:backgroundTint="@color/danone"
                android:orientation="horizontal"
                android:padding="6dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearance="@style/arredondada_48"
                    tools:src="@drawable/cat_brinquedo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="Detalhes do vendedor"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    android:textStyle="italic" />


            </LinearLayout>

            <TextView
                android:id="@+id/statusAvaliacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="16dp"
                android:text="Produto ainda não avaliado, de uma avaliação para ganhar R$ 0,50 agora!"
                android:textColor="@color/pretomaisclaro"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/estrela1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_estrela_vazia" />

                <ImageView
                    android:id="@+id/estrela2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_estrela_vazia" />

                <ImageView
                    android:id="@+id/estrela3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_estrela_vazia" />

                <ImageView
                    android:id="@+id/estrela4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_estrela_vazia" />

                <ImageView
                    android:id="@+id/estrela5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_estrela_vazia" />

                <TextView
                    android:id="@+id/quantidade_estrelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-black"
                    android:text="-"
                    android:textColor="@color/preto"
                    android:textSize="26sp" />

                <ImageButton
                    android:id="@+id/confirmar_avaliacao"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/circulo"
                    android:backgroundTint="#59FF00"
                    android:src="@drawable/ic_confirmar"
                    app:tint="@color/preto" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>